<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_major"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.gpcorser.myapplication.MajorActivity"
    android:weightSum="1">

    <TextView
        android:text="Majors"
        android:textSize="36sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_majors" />

    <RadioButton
        android:text="Computer Information Systems (CIS)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/major_cis" />

    <RadioButton
        android:text="Computer Science (CS)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/major_cs" />

    <TextView
        android:text="Minors"
        android:textSize="36sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_minors" />

    <RadioButton
        android:text="Computer Information Systems (CIS)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minor_cis" />

    <RadioButton
        android:text="Computer Science (CS)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minor_cs" />

    <RadioButton
        android:text="Cybersecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minor_cybersecurity" />

    <Button
        android:text="Button"
        android:layout_gravity="right"
        android:layout_width="200px"
        android:layout_height="20px"
        android:id="@+id/button2"
        android:layout_weight="0.21" />

</LinearLayout>
